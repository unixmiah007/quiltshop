import { Link } from 'react-router-dom'
import useCart from '../store/useCart'

export default function Cart() {
  const { items, update, remove, totalCents } = useCart()

  return (
    <div>
      <h2 className="text-2xl font-semibold mb-4">Your Cart</h2>
      {items.length === 0 && (
        <p>Your cart is empty. <Link to="/catalog" className="text-indigo-600">Go shopping</Link>.</p>
      )}
      <div className="space-y-3">
        {items.map(item => (
          <div key={item.id} className="bg-white p-3 rounded-xl shadow flex items-center gap-4">
            {item.imageUrl && <img src={item.imageUrl} alt={item.title} className="w-20 h-20 object-cover rounded-lg" />}
            <div className="flex-1">
              <div className="font-medium">{item.title}</div>
              <div className="text-sm text-gray-600">${(item.priceCents/100).toFixed(2)}</div>
            </div>
            <input type="number" min="1" value={item.quantity} onChange={e=> update(item.id, parseInt(e.target.value || '1'))}
              className="w-20 border rounded-lg p-1" />
            <button onClick={()=> remove(item.id)} className="text-red-600">Remove</button>
          </div>
        ))}
      </div>
      {items.length > 0 && (
        <div className="mt-6 flex items-center justify-between">
          <div className="text-xl font-semibold">Total: ${(totalCents/100).toFixed(2)}</div>
          <Link to="/checkout" className="bg-indigo-600 text-white px-6 py-3 rounded-xl shadow hover:bg-indigo-700">Checkout</Link>
        </div>
      )}
    </div>
  )
}
